<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet author="root" id="1.0">
        <createTable tableName="medicine">
            <column name="ID" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="MEDICINE" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="PRICE" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1.1" author="root">
        <sql>
    INSERT INTO medicine(MEDICINE, PRICE) VALUES ("test", 3);
        </sql>
    </changeSet>

    <changeSet author="root" id="2.0">
        <createTable tableName="order_medicine">
            <column name="ORDER_ID" type="bigint(20)">
                <constraints nullable="false"/>
            </column>
            <column name="MEDICINE_ID" type="bigint(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2.1" author="root">
        <sql>
            INSERT INTO order_medicine (MEDICINE_ID, ORDER_ID) VALUES (1,1);
        </sql>
    </changeSet>

    <changeSet id="3.0" author="root">
        <createTable tableName="user">
            <column name="ID" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="FIRST_NAME" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="LAST_NAME" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="EMAIL" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="LOGIN" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="PASSWORD" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ENABLED" type="boolean" defaultValueBoolean="true"/>
        </createTable>
    </changeSet>
    <changeSet id="3.1" author="root">
        <sql>
            INSERT INTO user (FIRST_NAME, LAST_NAME, EMAIL, LOGIN, PASSWORD) VALUES ("den", "sedun", "dens@com", "den", "1234")
        </sql>
    </changeSet>

    <changeSet author="root" id="4.0">
        <createTable tableName="order">
            <column name="ID" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="ORDER" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="user" type="int">
                <constraints
                        referencedTableName="user"
                        referencedColumnNames="ID"
                        foreignKeyName="user2_fk_user_id"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="4.1" author="root">
    <sql>
    INSERT INTO `order`(ID,`ORDER`, user) VALUES (2,"test_order", 1);
    </sql>
    </changeSet>
</databaseChangeLog>
